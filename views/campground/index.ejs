<% layout ('layout') -%>

<section id="campgrounds-page">
	<div class="container">
		<div class="row">
			<div class="jumbotron">
				<h1 id="mainHeader">Campgrounds</h1>
				<p class="lead-in text-muted">Create and view best campgrounds from all over the world</p>
				<p class="lead-in text-muted">Start Today!</p>
			</div>
		</div>
		<div id="campgrounds" class="row">
			<div class="grid rig">
				<% campgrounds.forEach(function(campground) { %>
					<div class="col-md-4 col-sm-4 col-xs-6 grid-item rig-cell">
						<img class="rig-img" src="<%=campground.cover %>">
						<h4 class="rig-header"><%= campground.name %></h4>
						<p class="rig-text"><%= campground.price %></p>
						<a class="rig-icon" href="/api/campgrounds/<%=campground._id %>"><i class="fa fa-plus" aria-hidden="true"></i></a>
						<div class="rig-overlay"></div>
					</div>
				<% }); %>
			</div>
		</div>
	</div>
</section>